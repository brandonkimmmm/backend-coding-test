{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "NODE_ENV=test nyc mocha -r ts-node/register tests/*.test.ts",
    "build": "tsc --project tsconfig.build.json",
    "start": "node build/index.js",
    "dev": "nodemon src/index.ts",
    "test:load": "( NODE_ENV=test forever start -c ts-node src/index.ts && sleep 5 ) && artillery run --environment=functional ./tests/load-test.yaml && artillery run --environment=load ./tests/load-test.yaml && forever stopall"
  },
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.7.2",
    "express": "^4.16.4",
    "helmet": "^4.6.0",
    "joi": "^17.5.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nanoid": "^3.1.30",
    "sqlite3": "^4.0.6",
    "swagger-ui-express": "^4.2.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.36",
    "@types/chai": "^4.2.22",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.9",
    "@types/lodash": "^4.14.177",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.11",
    "@types/sqlite3": "^3.1.7",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/triple-beam": "^1.3.2",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "artillery": "^1.6.1",
    "artillery-plugin-expect": "^1.5.0",
    "chai": "^4.3.4",
    "eslint": "^8.4.0",
    "faker": "^5.5.3",
    "forever": "^4.0.1",
    "joi-to-typescript": "^2.3.0",
    "mocha": "^6.1.4",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "pre-push": "^0.1.1",
    "supertest": "^4.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "pre-push": [
    "test"
  ]
}
