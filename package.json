{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "nyc mocha ./tests/*.test.js",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test:load": "forever start index.js && artillery run --environment=functional ./tests/load-test.yaml && artillery run --environment=load ./tests/load-test.yaml && forever stopall"
  },
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.7.2",
    "express": "^4.16.4",
    "joi": "^17.5.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nanoid": "^3.1.30",
    "sqlite3": "^4.0.6",
    "swagger-ui-express": "^4.2.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "artillery": "^1.6.1",
    "artillery-plugin-expect": "^1.5.0",
    "chai": "^4.3.4",
    "eslint": "^8.4.0",
    "faker": "^5.5.3",
    "forever": "^4.0.1",
    "mocha": "^6.1.4",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "pre-push": "^0.1.1",
    "supertest": "^4.0.2"
  },
  "pre-push": [
    "test"
  ]
}
